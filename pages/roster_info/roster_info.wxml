<!--pages/roster_info/roster_info.wxml-->

<view class='header'>
    <image class='bg_image' src='../../images/roster_bg.jpg'></image>
    <view class='logo'>
        <image class='logo_image'  src=' {{roster.user_logo}}'></image>
    </view>
</view>
<view style='height:50px'></view>
<view class='summary'>
    <view class='node'>
        <view class='title'>姓名</view>
        <view class='des'> {{roster.user_name}}</view>
    </view>
    <view class='node'>
        <view class='title'>公司</view>
        <view class='des'>  {{roster.company_name}} </view>
    </view>
    <view class='node' hidden='{{roster.sell==""}}'>
        <view class='title'>求购</view>
        <view class='des'>  {{roster.sell}} </view>
    </view>
    <view class='node' hidden='{{roster.buy==""}}'>
        <view class='title'>供应</view>
        <view class='des'>  {{roster.buy}} </view>
    </view>
</view>