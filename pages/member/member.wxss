/* 会员支付 */
.pay{
    padding: 15px;
}
.title{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title_title{
    font-size: 14pt;
    font-weight: bolder;
}
.title_des{
    font-size: 10pt;
    color: #888;

}

.choice{
    display: flex;
    justify-content: space-around;
}

.des{
    background-color: #f8f1e9;
    border: 1rpx solid #caba87;
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 15px;
}
.des_title{
    font-size: 11pt;
}
.des_price{
    font-size: 11pt;
    color: #ff9407;
}
.des_price label{ font-size: 15pt;}
.btn{ 
    background: linear-gradient(to right, #e7d9b6 , #d9bc84);
    text-align: center;
    padding: 15px;
    font-size: 11pt;
    font-weight: bolder;
    color: #414135;
    border-radius: 8px;
}

.line__gray{    content: "";    border-bottom: 1rpx #dddddd solid;    }

/* 会员权益 */

.summary{
    padding: 0 15px
}
.summary_title{
    font-size: 14pt;
    font-weight: bolder;
}
.node{
    display: flex;
    align-content: center;
    padding: 0 30px;
}
.icon{
    flex: 0 0 81px; 
}
.icon_image{
    width: 36px;
    height: 36px;
}
.summary_des{
    line-height: 36px;
    font-size: 11pt;
    font-weight: bolder;
}