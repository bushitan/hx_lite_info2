

<view class='cover'>
    <block wx:for="{{list}}" wx:key="item">
        <view class='node'> 
            <image class='image' src='{{item.cover_url}}' mode='widthFit'></image>

            <view class='title'>{{item.title}}</view>
            <view class='time'>{{item.issue_time}}</view>

        </view>
        <view class='line__gray'></view>
    </block>
</view>